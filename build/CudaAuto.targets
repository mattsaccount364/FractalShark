<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!--
    CudaAuto.targets
    Imports the matching CUDA Build Customizations .targets (with fallbacks).
  -->
  <PropertyGroup>
    <CudaBuildCustomizationVersion Condition="'$(CudaBuildCustomizationVersion)'==''"></CudaBuildCustomizationVersion>
  </PropertyGroup>

  <Import Project="$(VCTargetsPath)\BuildCustomizations\CUDA $(CudaBuildCustomizationVersion).targets"
          Condition="'$(CudaBuildCustomizationVersion)'!='' and Exists('$(VCTargetsPath)\BuildCustomizations\CUDA $(CudaBuildCustomizationVersion).targets')" />

  <Import Project="$(VCTargetsPath)\BuildCustomizations\CUDA 13.1.targets"
          Condition="'$(CudaBuildCustomizationVersion)'=='' and Exists('$(VCTargetsPath)\BuildCustomizations\CUDA 13.1.targets')" />
  <Import Project="$(VCTargetsPath)\BuildCustomizations\CUDA 13.0.targets"
          Condition="'$(CudaBuildCustomizationVersion)'=='' and Exists('$(VCTargetsPath)\BuildCustomizations\CUDA 13.0.targets')" />
</Project>
